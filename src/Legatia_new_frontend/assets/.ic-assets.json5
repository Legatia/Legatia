[
    {
        "match": "**/*",

        // Provides a base set of security headers that will work for most dapps.
        // Any headers you manually specify will override the headers provided by the policy.
        // See 'dfx info security-policy' to see the policy and for advice on how to harden the headers.
        // Once you improved the headers for your dapp, set the security policy to "hardened" to disable the warning.
        // Options are: "hardened" | "standard" | "disabled".
        "security_policy": "standard",

        // Disable the warning about using the standard security policy
        "disable_security_policy_warning": true,

        // Custom headers to override problematic permissions policy features
        "headers": {
            "Permissions-Policy": "accelerometer=(), autoplay=(), camera=(), cross-origin-isolated=(), display-capture=(), encrypted-media=(), fullscreen=(), geolocation=(), gyroscope=(), keyboard-map=(), magnetometer=(), microphone=(), midi=(), payment=(), picture-in-picture=(), publickey-credentials-get=(), screen-wake-lock=(), sync-xhr=(), usb=(), web-share=(), xr-spatial-tracking=(), clipboard-read=(), clipboard-write=(), gamepad=(), hid=(), idle-detection=(), interest-cohort=(), serial=(), conversion-measurement=()"
        },

        // Uncomment to redirect all requests from .raw.icp0.io to .icp0.io
        // "allow_raw_access": false  
    },
]
